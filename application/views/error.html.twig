{% extends "layout_global.html.twig" %}

{% block title %}{{ error_title }} - {{ constant("APP_NAME") }}{% endblock %}

{% block main %}
<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <section class="panel panel-warning">
        <div class="panel-heading">
          <p><i class="fa fa-exclamation-triangle fa-3x" aria-hidden="true"></i></p>
          <h1 class="panel-title">
            {{ error_title }}
          </h1>
        </div>
        <div class="panel-body">
          <p>{{ error_info | nl2br }}</p>
          <p>
            <a href="javascript:history.back()" class="btn btn-default">前の画面に戻る</a>
          </p>
        </div>
      </section>
    </div>
  </div>
</div>
{% endblock %}
