{% extends "layout_main.html.twig" %}

{% block title %}
  {{ page.title }} - {{ constant("APP_NAME") }}
{% endblock %}

{% block maincontent %}

  <h1 class="main__title">
    <a href="{{ base_url("home/pages") }}">
      お知らせ
    </a>
  </h1>

  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">

      <article class="panel panel-default">
        <div class="panel-body markdown-body">
          <h1>{{ page.title }}</h1>
          <p class="text-muted text-right">更新 : {{ page.created_at_string }}</p>
          {{ page.body_html | raw }}
        </div>
      </article>

    </div>
  </div>

{% endblock %}
